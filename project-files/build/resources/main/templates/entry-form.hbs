{{#partial "body"}}
    <section>
        <div class="container">
            <div class="{{#if entry}}edit-entry{{else}}new-entry{{/if}}">
                <h2>{{#if entry}}Edit Entry{{else}}Publish New Entry{{/if}}</h2>
                <form action="{{#if entry}}/admin/edit/{{entry.slug}}{{else}}/admin/new{{/if}}" method="post">
                    <label for="title">Title</label>
                    <input type="text" name="title" id="title" value="{{entry.title}}" required><br>

                    <label for="tags">Tags (comma-separated)</label>
                    <input type="text" name="tags" id="tags" value="{{#each entry.tags}}{{this}}{{#unless @last}}, {{/unless}}{{/each}}" required><br>

                    <label for="entry">Entry</label>
                    <textarea rows="5" name="entry" id="entry" required>{{entry.content}}</textarea>

                    <input type="submit" value="{{#if entry}}Save Entry{{else}}Publish Entry{{/if}}" class="button">
                    <a href="/" class="button button-secondary">Cancel</a>

                    {{#if entry}}
                        <form action="/admin/delete/{{entry.slug}}" method="post" class="delete-form">
                            <input type="submit" value="Delete Entry" class="button button-delete">
                        </form>
                    {{/if}}
                </form>
            </div>
        </div>
    </section>
{{/partial}}
{{> layout.hbs}}